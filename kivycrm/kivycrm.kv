#:kivy 1.11.1

<MainScreen>:
	ActionBar:
		pos_hint: {'top': 1}
		
		ActionView:
			use_separator: True

			ActionPrevious:
				title: 'KivyCRM'
				with_previous: True
				on_release:
					root.manager.transition.direction = 'right'
					root.manager.current = 'Login'
			
			ActionOverflow:

			ActionButton:
				text: 'Settings'
				on_release:
					app.open_settings()
			
			ActionButton:
				text: 'Exit'
				on_release: exit()

<LoginScreen>:
	padding: 25
	
	username: username_input
	password: password_input
	status: status_label
	remember: remember_chk

	BoxLayout:
		size_hint: 0.5, 0.5
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		orientation: 'vertical'
		
		AnchorLayout:
			size_hint: 1, 0.2

			Label:
				id: status_label
				text: 'Authorization'
				text_size: self.size
				font_size: '17sp'
				halign: 'center'
				valign: 'center'
				
		BoxLayout:
			orientation: 'vertical'
			spacing: 10

			Label:
				id: status_label
				text: 'Please enter login and pasword...'
				text_size: self.size
				color: 0, 1, 0, 1
				halign: 'center'
				valign: 'center'

			TextInput:
				id: username_input
				name: 'username'
				hint_text: 'Login...'
				multiline: False

			TextInput:
				id: password_input
				name: 'passowrd'
				hint_text: 'Password...'
				multiline: False
				password: True
			
		GridLayout:
			cols: 2
			size_hint: 1, 0.5
			Widget:
			BoxLayout:
				Label:
					text_size: self.size
					halign: 'right'
					valign: 'middle'
					text: 'Remember'
				CheckBox:
					halign: 'left'
					id: remember_chk

			Button:
				text: 'Login'
				on_release:
					root.on_login()

			Button:
				text: 'Exit'
				on_release:
					exit()

